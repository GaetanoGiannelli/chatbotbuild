{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Worker",
      "program": "${workspaceFolder}/node_modules/.bin/wrangler",
      "args": ["dev", "--inspector-port"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceFolder}/node_modules/.bin/wrangler.cmd"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Wrangler",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
